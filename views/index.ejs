<!doctype html>
<html ng-app='myApp'>
<head>
	<meta charset='utf-8'>
	<title>My App</title>
	<link rel="stylesheet" href="/bower_components/bootstrap/dist/css/bootstrap.css">
</head>
<body>
		<h1>Contact List App</h1>
		<div class="container" ng-controller='AppCtrl'>
			<table class="table">
				<thead>
					<tr>
						<th>Name</th>
						<th>Email</th>
						<th>Phone Number</th>
						<th>Actions</th>
						<th>&nbsp</th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<td><input type="form-control" ng-model="contact.name"></td>
						<td><input type="form-control" ng-model="contact.email"></td>
						<td><input type="form-control" ng-model="contact.number"></td>
						<td><button class='btn btn-primary' ng-click='addContact()'>Add Contact</button></td>
						<td>
							<button class='btn btn-info' ng-click='update()'>Update</button>
							<button class='btn btn-info' ng-click='clear()'>Clear</button>
						</td>
					</tr>
					<tr data-ng-repeat="contact in contactlist">
						<td>{{contact.name}}</td>
						<td>{{contact.email}}</td>
						<td>{{contact.number}}</td>
						<td><button class='btn btn-danger' ng-click='remove(contact._id)'>Remove</button></td>
						<td><button class='btn btn-warning' ng-click='edit(contact._id)'>Edit</button></td>
					</tr>
				</tbody>
			</table>
		</div>
	<script src='https://ajax.googleapis.com/ajax/libs/angularjs/1.3.16/angular.min.js'></script>
	<script src='/bower_components/jquery/dist/jquery.js'></script>
	<script src='/bower_components/bootstrap/dist/js/bootstrap.js'></script>
	<script src='/public/controller/controller.js'></script>
</body>
</html>